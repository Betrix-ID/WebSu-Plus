<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/colorBackground"
	android:padding="16dp">
    
    <View
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="30dp"/>
        
	<TextView
		android:id="@+id/settings_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Settings"
		android:textColor="@color/colorOnSurface"
		android:textSize="24sp"
		android:textStyle="bold"
		android:paddingBottom="8dp"/>

	<LinearLayout
		android:id="@+id/card_app_settings"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/bg_card_dark"
		android:padding="16dp"
		android:layout_marginVertical="8dp"
		android:elevation="5dp" 
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/section_app_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Application Settings"
			android:textColor="#FF5484A6"
			android:textStyle="bold"
			android:textSize="15sp"
			android:paddingBottom="12dp"/>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp">

				<ImageView
					android:id="@+id/icon_check_update"
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_alignParentStart="true"
					android:src="@drawable/ic_refresh"
					android:tint="#FF5484A6"/>

				<LinearLayout
					android:layout_toEndOf="@id/icon_check_update"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/text_check_update_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Refresh Application"
						android:textColor="@color/colorOnSurface"
						android:textStyle="bold"
						android:textSize="14sp"/>

					<TextView
						android:id="@+id/text_check_update_desc"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="refresh menu "
						android:textColor="@color/colorSurface"
						android:textSize="12sp"/>

				</LinearLayout>

				<com.WebSu.ig.logd
					android:id="@+id/switch_auto_check"
					android:layout_width="50dp"
					android:layout_height="30dp"
					android:layout_alignParentEnd="true"
					android:checked="true"
					android:thumbTint="#FF5484A6"
					android:trackTint="#FF5484A6"/>

			</RelativeLayout>
		</FrameLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:id="@+id/amber"
				android:clickable="true"
				android:focusable="true"
				android:background="?attr/selectableItemBackground">

				<ImageView
					android:id="@+id/icon_more_settings"
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_alignParentStart="true"
					android:src="@drawable/ic_settings"
					android:tint="#FF5484A6"/>

				<LinearLayout
					android:layout_toEndOf="@id/icon_more_settings"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="12dp"
					android:orientation="vertical">

					<TextView
						android:id="@+id/settings_title_item"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Setelan lainnya"
						android:textColor="@color/colorOnPrimary"
						android:textStyle="bold"
						android:textSize="14sp"/>

					<TextView
						android:id="@+id/text_more_settings_desc"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="advanced "
						android:textColor="@color/colorSurface"
						android:textSize="12sp"/>

				</LinearLayout>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:src="@drawable/ic_arrow_right"
					android:tint="@color/colorSurface"/>

			</RelativeLayout>
		</FrameLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/card_tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/bg_card_dark"
		android:padding="16dp"
		android:layout_marginBottom="8dp"
		android:elevation="5dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Longger share"
			android:textColor="#FF5484A6"
			android:textStyle="bold"
			android:textSize="15sp"
			android:paddingBottom="12dp"/>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:id="@+id/send_log_item"
				android:clickable="true"
				android:focusable="true"
				android:background="?attr/selectableItemBackground">

				<ImageView
					android:id="@+id/icon_send_log"
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_alignParentStart="true"
					android:src="@drawable/ic_bug"
					android:tint="#FF5484A6"/>

				<TextView
					android:id="@+id/text_send_log_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toEndOf="@id/icon_send_log"
					android:layout_marginStart="12dp"
					android:text="Send  Log"
					android:textColor="@color/colorOnSurface"
					android:textStyle="bold"
					android:textSize="14sp"/>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:src="@drawable/ic_arrow_right"
					android:tint="@color/colorSurface"/>

			</RelativeLayout>
		</FrameLayout>
	</LinearLayout>
    
	<LinearLayout
		android:id="@+id/card_about"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/bg_card_dark"
		android:padding="16dp"
		android:layout_marginBottom="8dp"
		android:elevation="5dp">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="License label"
			android:textColor="#FF5484A6"
			android:textStyle="bold"
			android:textSize="15sp"
			android:paddingBottom="12dp"/>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:id="@+id/about_item"
				android:clickable="true"
				android:focusable="true"
				android:background="?attr/selectableItemBackground">

				<ImageView
					android:id="@+id/icon_about"
					android:layout_width="22dp"
					android:layout_height="22dp"
					android:layout_alignParentStart="true"
					android:src="@drawable/ic_info"
					android:tint="#FF5484A6"/>

				<TextView
					android:id="@+id/text_about_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toEndOf="@id/icon_about"
					android:layout_marginStart="12dp"
					android:text="License"
					android:textColor="@color/colorOnSurface"
					android:textStyle="bold"
					android:textSize="14sp"/>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:src="@drawable/ic_arrow_right"
					android:tint="@color/colorSurface"/>

			</RelativeLayout>
		</FrameLayout>
	</LinearLayout>
</LinearLayout>

